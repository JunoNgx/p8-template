	timer = 90
	cls()

	fadeIn()
end

function splash_update()
	
	-- a controversial condition and could potentially be problematic
	if (timer == 30) fadeOut() 

	if (timer>0) then
		timer-=1
	else
		gamestate="menu"
		menu_init()
	end
end

